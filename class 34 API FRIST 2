//jAVASRIPT..................................................

const quoteElement = document.querySelector(`#mein2`);
const authorElement = document.querySelector(`#mein3`);
const buttonElement = document.querySelector(`button`);


const apiQuote = `https://api.api-ninjas.com/v1/quote
`;
const quote= `/5ax2ZGNWC06v8Qj3XKOaA==edSerMBNYGuov4tj
`;

const getQuote =()=>{
    fetch(apiQuote,
        { headers: { 
        'X-Api-Key': quote,},}).then(data =>data.json()).then(follist=>{
            // console.log(follist[0])
    quoteElement.textContent=follist[0].quote;
    authorElement.textContent=follist[0].author;
    buttonElement.addEventListener(`click`,getQuote);
}
).catch(prror=>{
    console.error(`Error Fatching Quotes`,prror)
})
};
getQuote()

