///JAVASCRIPT....../....................................................................


// JavaSxript DOM document object model

let height = document.getElementById(`height`);
let weight = document.getElementById(`weight`);
let button = document.getElementById(`button`);

let Score = document.getElementById(`Score`);
let result = document.querySelector(`.result`);

button.addEventListener(`click`,function(){
    let oldHeight= parseFloat(height.value);
    let oldWeight= parseFloat(weight.value);
//  console.log( oldHeight + oldWeight);
//     console.log(typeof oldHeight)

oldHeight = oldHeight / 100;

let sqrvalue = oldHeight * oldHeight;

let bmi = oldWeight / sqrvalue;
Score.textContent = bmi.toFixed(2);

result.style.display = `block`;

if(Score.textContent < 18.6){
 Score.style.background = `red`;
}else if(Score.textContent < 24.9){
    Score.style.background = `green`;
}else{
    Score.style.background = `#f1c40f`;
}

});

let form = document.getElementById(`form`);
form.addEventListener(`submit`,(t)=>{
    t.preventDefault()
})

