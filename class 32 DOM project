button.forEach((rolle)=>{
    rolle.addEventListener(`click`,function(){
        let sovName=this.classList[0]
        colorAll = ``;
            if(sovName === `red`){
            colorAll = `#e74c3c`;
        }
         if(sovName === `green`){
            colorAll = `#16a085`;
        }
        if(sovName === `blue`){
            colorAll = `#2ecc71`;
        }
        if(sovName === `pink`){
            colorAll = `#e84393`;
        }
        if(sovName === `purple`){
            colorAll= `#ff81be`;
        }
        

        console.log(sovName)
        console.log(colorAll)
        body.style.backgroundColor=colorAll;
    })
});





